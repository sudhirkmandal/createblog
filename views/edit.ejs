<%- include("./partials/header.ejs") %>
<div class="max-w-xl min-h-[87vh] mx-auto p-6 pb-3 mt-1 bg-white shadow-md rounded-lg">
  <h2 class="text-2xl font-bold mb-4 text-center text-gray-800">
    Edit Your Place
  </h2>
  <form action="/place/edit/<%= allPlace._id %>" method="POST" class="space-y-2" enctype="multipart/form-data">
    <!-- Name Input -->
    <div>
      <label for="name" class="block text-sm font-medium text-gray-700 mb-2"
        >Place Name <span class="text-red-500">*</span></label
      >
      <input
        type="text"
        id="name"
        name="name"
        class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
        placeholder="Enter the place name"
        required value="<%= allPlace.name %>"
      />
    </div>

    <!-- Description Input -->
    <div>
      <label
        for="description"
        class="block text-sm font-medium text-gray-700 mb-2"
        >Description</label
      >
      <textarea
        id="description"
        name="description"
        rows="3"
        class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
        placeholder="Enter a description (optional)"
      ><%= allPlace.description %></textarea>
    </div>

    <!-- Location Input -->
    <div>
      <label for="location" class="block text-sm font-medium text-gray-700 mb-2"
        >Location <span class="text-red-500">*</span></label
      >
      <input
        type="text"
        id="location"
        name="location"
        class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
        placeholder="Enter the location"
        required value="<%= allPlace.location %>"
      />
    </div>

    <!-- Image URL Input -->
    <div>
      <label for="image" class="block text-sm font-medium text-gray-700 mb-2"
        >Image</label
      >
      <input type="file" name="image" value="/images/uploads/<%= allPlace.image %>" />
    </div>

    <!-- Submit Button -->
    <div class="text-center">
      <button
        type="submit"
        class="bg-yellow-500 mt-3 text-black px-6 py-2 rounded-md hover:bg-yellow-600 transition duration-200"
      >
        Edit Place
      </button>
    </div>
  </form>
</div>

<%- include("./partials/footer.ejs") %>
