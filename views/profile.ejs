<%- include("./partials/header.ejs") %>
<div class="px-10 py-5 w-full min-h-[87vh]">
  <h1 class="text-2xl font-semibold mb-2">All Places .</h1>
  <div class="w-[100%] flex flex-wrap gap-3">
    <% if(user.places.length > 0){%> <% user.places.forEach(function(place){%>
    <a href="/place/view/<%= place._id %>">
      <div
        class="w-[23rem] shadow-md h-[55vh] py-3 mr-4 hover:scale-[.97] duration-100"
      >
        <img
          class="w-full rounded-md h-[70%] object-cover"
          src="/images/uploads/<%= place.image %>"
          alt=""
        />
        <div class="mt-1 p-2">
          <p class="font-[500]"><%= place.name %></p>
          <p class="font-[500]"><%= place.description %></p>
          <p><%= place.location %></p>
        </div>
      </div>
    </a>
    <%}) %> <%}else{%>
    <h3 class="text-[1.4vw] mt-5 text-zinc-600">no places yet.</h3>
    <%} %>
  </div>
</div>
<%- include("./partials/footer.ejs") %>
